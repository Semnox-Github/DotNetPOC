<Window x:Class="Semnox.Parafait.POSUI.StaticMenu.ProductMenuEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semnox.Parafait.POSUI.StaticMenu"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:customcontrols="clr-namespace:Semnox.Parafait.CommonUI;assembly=CommonUI"
        mc:Ignorable="d"
        Style="{StaticResource PopupWindowStyle}"
        Title="Edit Product Menu">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                                   Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid  x:Name="MainGrid"
           Height="{x:Static SystemParameters.PrimaryScreenHeight}"
           Width="{x:Static SystemParameters.PrimaryScreenWidth}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"
                           x:Name="MainGridHeaderRow" />
            <RowDefinition Height="7*"
                           x:Name="MainGridContentRow" />
            <RowDefinition Height="Auto"
                           x:Name="MainGridFooterRow" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="HeaderStackPanel"
                    Grid.Row="0"
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    Margin="20,12">
            <customcontrols:CustomTextBlock x:Name="TitleLabel"
                                            Grid.Row="0"
                                            Text="Edit Product Menu Details"
                                            TextSize="Small"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Foreground="{StaticResource Control.BorderBrush.Focused}" />
            <!--<customcontrols:CustomTextBlock x:Name="HeaderLabel"
                                            Grid.Row="0"
                                            Text="{Binding Heading}"
                                            TextSize="Large"
                                            FontWeight="Bold"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Margin="0,0,0,0" />-->
        </StackPanel>

        <Border x:Name="ContentTopBorder"
                Grid.Row="1"
                BorderBrush="{StaticResource Control.ComboBackground}"
                BorderThickness="0,1,0,0"
                VerticalAlignment="Top">
            <customcontrols:CustomScrollViewer x:Name="ContainerScrollViewer"
                                               Grid.Row="1"
                                               Margin="16"
                                               CanContentScroll="True"
                                               HorizontalScrollBarVisibility="Auto"
                                               VerticalScrollBarVisibility="Auto">
                <Grid x:Name="GMEditMachineGridContainer">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <customcontrols:CustomTextBox Text="{Binding Name}"
                                              Size="Small"
                                              IsMandatory="True"
                                              Heading="Name"
                                              Margin="0,0,16,0"
                                              DefaultValue="Enter Name"
                                              Grid.Column="0"
                                              Grid.Row="0"/>
                    <customcontrols:CustomTextBox Text="{Binding Description}"
                                              Size="Small"
                                              Heading="Description"
                                              Margin="0,0,16,0"
                                              DefaultValue="Enter Description"
                                              Grid.Column="1"
                                              Grid.Row="0"/>
                    <customcontrols:CustomComboBox x:Name="cmbPanelType" Heading="Panel Type" 
                                                   ItemsSource="{Binding ProductMenuTypeList}" 
                                                   DisplayMemberPath="Value" 
                                                   SelectedValuePath="Key" 
                                                   SelectedValue="{Binding Path=Type}"
                                                   Grid.Column="0"
                                                   Size="Small"
                                                   IsEditable="True"
                                                   Grid.Row="1"
                                                   Margin="0,0,16,0"/>
                    <customcontrols:CustomTextBoxDatePicker Heading="Start Date"
                                                            Size="Small"
                                                            
                                                            DefaultValue="Enter Start Date"
                                                            Text="{Binding StartDate}"
                                                            Grid.Column="1"
                                                            Grid.Row="1"
                                                            Margin="0,0,16,0"/>
                    <customcontrols:CustomTextBoxDatePicker Heading="End Date"
                                                            Size="Small"
                                                            DefaultValue="Enter End Date"
                                                            Text="{Binding EndDate}"
                                                            Grid.Column="0"
                                                            Grid.Row="2"
                                                            Margin="0,0,16,0"/>
                    <customcontrols:CustomCheckBox Heading="Active?" 
                                                   Size="Small"
                                                   Grid.Column="1"
                                                   Grid.Row="2"
                                                   IsChecked="{Binding IsActive}"
                                                   IsEnabled="True"
                                                   Margin="0,0,16,0"/>
                </Grid>
            </customcontrols:CustomScrollViewer>
        </Border>

        <Border x:Name="FooterTopBorder"
                Grid.Row="2"
                BorderBrush="{StaticResource Control.ComboBackground}"
                BorderThickness="0,2,0,0"
                VerticalAlignment="Top">
            <Grid x:Name="FooterGrid"
                  Margin="20,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="FooterActionAreaColumn"
                                      Width="9*" />
                    <ColumnDefinition x:Name="FooterKeyBoardColumn"
                                      Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="FooterActionAreaStackPanel"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center">
                    <customcontrols:CustomActionButton x:Name="btnFooterCancel"
                                                       Grid.Column="1"
                                                       ActionStyle="Passive"
                                                       IsEnabled="True"
                                                       Width="{StaticResource ActionButtonWidth}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                                                       Command="{Binding CancelClickCommand}"
                                                       Content="CANCEL" />
                    <customcontrols:CustomActionButton x:Name="btnFooterOk"
                                                       Grid.Row="2"
                                                       Margin="16,0,0,0"
                                                       Width="{StaticResource ActionButtonWidth}"
                                                       Command="{Binding ConfirmClickCommand}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                       Content="OK" />
                </StackPanel>
                <Button x:Name="btnKeyboard"
                        Grid.Column="1"
                        VerticalAlignment="Bottom">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="BackgroundBorder"
                                                BorderBrush="{StaticResource Control.BorderBrush}"
                                                BorderThickness="0,0,0,3"
                                                CornerRadius="{StaticResource CornerRadius}"
                                                Background="{TemplateBinding Background}">
                                            <Grid x:Name="GridIconContainer"
                                                  Margin="8"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center">
                                                <Path x:Name="KeyBoardIconAlignmentPath"
                                                      Data="M0 0H54V32H0z" />
                                                <Path x:Name="KeyBoardIconPath"
                                                      Data="M50.4 32c1.997 0 3.6-1.583 3.6-3.556V3.556C54 1.583 52.397 0 50.4 0H3.6C1.603 0 0 1.583 0 3.556v24.888C0 30.417 1.603 32 3.6 32h46.8zm0-3.556H3.6V3.556h46.8v24.888zM10.35 10.667c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 7.11c.253 0 .45-.194.45-.444V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v6.666h-3.15c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h6.3zm-32.4 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-6.3c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h6.3zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm-25.2 7.112c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm28.8 0c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-24.3c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h24.3zm7.2 0c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7z"
                                                      Fill="{StaticResource Control.BorderBrush.Focused}" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

    </Grid>
</Window>

                                      Fill="{StaticResource Control.BorderBrush.Focused}" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <common:CustomTextBlock x:Name="tbChooseProduct"
                                Grid.Row="0"
                                Text="Choose Product"
                                TextSize="Medium"
                                Padding="32,16"
                                FontWeight="{StaticResource FontWeight.Bold}"/>

        <Border BorderBrush="{StaticResource Control.BorderBrush}"
                Grid.Row="1"
                BorderThickness="0,1"
                Padding="0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="{StaticResource Control.BorderBrush}"
                        Grid.Row="0"
                        BorderThickness="0,0,0,1"
                        Padding="32,0,32,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <common:CustomTextBox x:Name="tbxName"
                                              Text="{Binding Name}"
                                              Size="Small"
                                              Heading="Search"
                                              ErrorTextVisible="False"
                                              Margin="0,0,16,0"
                                              DefaultValue="Enter name, description or barcode"
                                              Grid.Column="0"/>
                        <common:CustomComboBox x:Name="cmbProductType"
                                               ItemsSource="{Binding ProductTypeList}"
                                               SelectedValue="{Binding SelectedProductTypeId, Mode=TwoWay}"
                                               DisplayMemberPath="Value" 
                                               SelectedValuePath="Key"
                                               Size="Small"
                                               ErrorTextVisible="False"
                                               Margin="0,0,16,0"
                                               IsEditable="True"
                                               Heading="Type"
                                               Grid.Column="1"/>
                        <common:CustomComboBox x:Name="cmbCategory"
                                               ItemsSource="{Binding CategoryList}"
                                               SelectedValue="{Binding SelectedCategoryId, Mode=TwoWay}"
                                               IsEditable="True"
                                               DisplayMemberPath="Value" 
                                               SelectedValuePath="Key"
                                               Margin="0,0,8,0"
                                               ErrorTextVisible="False"
                                               Size="Small"
                                               Heading="Category"
                                               Grid.Row="0"
                                               Grid.Column="2"/>
                        <common:CustomActionButton x:Name="btnClear"
                                                   Grid.Column="3"
                                                   VerticalAlignment="Bottom"
                                                   Margin="0,0,8,0"
                                                   Width="{StaticResource ActionButton.Width}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                                                   Command="{Binding ActionsCommand}"
                                                   ActionStyle="Passive"
                                                   Content="CLEAR" />
                        <common:CustomActionButton x:Name="btnSearch"
                                                   Grid.Column="4"
                                                   Width="{StaticResource ActionButton.Width}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                                                   Command="{Binding ActionsCommand}"
                                                   Content="SEARCH" 
                                                   VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
                <common:GenericToggleButtonsUserControl x:Name="GenericToggleButtonUserControl"
                                                        DataContext="{Binding GenericToggleButtonsVM}"
                                                        Grid.Row="1"
                                                        Margin="32,16"/>
            </Grid>
        </Border>
        <Grid Margin="32,16"
              Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Grid.Column="0"
                        Grid.ColumnSpan="2">
                <common:CustomActionButton x:Name="btnCancel"
                                           Width="{StaticResource ActionButton.Width}"
                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                                           Command="{Binding ActionsCommand}"
                                           ActionStyle="Passive"
                                           Content="CANCEL" />
                <common:CustomActionButton x:Name="btnConfirm"
                                           Width="{StaticResource ActionButton.Width}"
                                           Margin="{StaticResource OkAndYearMargin}"
                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                                           Command="{Binding ActionsCommand}"
                                           Content="CONFIRM" />
            </StackPanel>
            <Button x:Name="btnKeyBoard"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"                    
                    Style="{StaticResource KeyboardButtonStyle}"/>

        </Grid>
    </Grid>
</Window>

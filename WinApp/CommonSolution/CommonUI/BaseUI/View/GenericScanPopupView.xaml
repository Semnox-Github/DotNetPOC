                <Style TargetType="{x:Type Grid}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                     Value="True">
                            <Setter Property="Margin"
                                    Value="6" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                     Value="False">
                            <Setter Property="Margin"
                                    Value="16" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

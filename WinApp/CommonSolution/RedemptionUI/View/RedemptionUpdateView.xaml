<Window x:Class="Semnox.Parafait.RedemptionUI.RedemptionUpdateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:common="clr-namespace:Semnox.Parafait.CommonUI;assembly=CommonUI"
        xmlns:local="clr-namespace:Semnox.Parafait.RedemptionUI"
        Style="{StaticResource PopupWindowStyle}"
        mc:Ignorable="d"
        Title="RedemptionUpdateView">
    <Window.Resources>
        <Style TargetType="{x:Type common:CustomComboBox}"
               BasedOn="{StaticResource {x:Type common:CustomComboBox}}"
               x:Key="MultiScreenComboBox">
            <Setter Property="Size"
                    Value="Small" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                             Value="True">
                    <Setter Property="Size"
                            Value="XSmall" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type common:CustomTextBox}"
               BasedOn="{StaticResource {x:Type common:CustomTextBox}}"
               x:Key="MultiScreenTextBox">
            <Setter Property="Size"
                    Value="Small" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                             Value="True">
                    <Setter Property="Size"
                            Value="XSmall" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style BasedOn="{StaticResource {x:Type common:CustomScrollViewer}}"
               TargetType="{x:Type common:CustomScrollViewer}"
               x:Key="MultiScreenScrollViewer">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                             Value="True">
                    <Setter Property="Size"
                            Value="XSmall" />
                </DataTrigger>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="False">
                    <Setter Property="Margin"
                            Value="16" />
                </DataTrigger>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="True">
                    <Setter Property="Margin"
                            Value="4" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style BasedOn="{StaticResource {x:Type common:CustomActionButton}}"
               TargetType="{x:Type common:CustomActionButton}"
               x:Key="MultiScreenButtonStyle">
            <Setter Property="Padding"
                    Value="16,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="True">
                    <Setter Property="Height"
                            Value="40" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="HeaderStackPanel"
                    Grid.Row="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
            <StackPanel.Style>
                <Style TargetType="{x:Type StackPanel}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                     Value="False">
                            <Setter Property="Margin"
                                    Value="16,24" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                     Value="True">
                            <Setter Property="Margin"
                                    Value="6,8" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <common:CustomTextBlock x:Name="lblTitle"
                                    Text="{Binding Title}" />

            <common:CustomTextBlock x:Name="lblHeader"
                                    Text="{Binding Heading}"
                                    FontWeight="{StaticResource FontWeight.Bold}" />
        </StackPanel>

        <Border x:Name="ContentContainerBorder"
                Grid.Row="1"
                BorderBrush="{StaticResource Control.ComboBackground}"
                BorderThickness="0,1,0,0"
                VerticalAlignment="Top">
            <common:CustomScrollViewer x:Name="scvDataContainer"
                                       Style="{StaticResource MultiScreenScrollViewer}"
                                       HorizontalScrollBarVisibility="Auto"
                                       VerticalScrollBarVisibility="Visible">
                <Grid x:Name="RedemptionUpdateContentGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="LeftContainerGrid"
                          Grid.Column="0">
                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Margin"
                                        Value="0,0,8,0" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                                 Value="True">
                                        <Setter Property="Margin"
                                                Value="0,0,4,0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <StackPanel x:Name="LeftContentStackPanel">
                            <StackPanel.Style>
                                <Style TargetType="{x:Type StackPanel}">
                                    <Setter Property="Margin"
                                            Value="16,0,8,0" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                                     Value="True">
                                            <Setter Property="Margin"
                                                    Value="8,0,4,0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <common:CustomComboBox x:Name="cmbRedemptionStatus"
                                                   ItemsSource="{Binding RedemptionStatus}"
                                                   SelectedItem="{Binding SelectedRedemptionStatus}"
                                                   DefaultValue="Select"
                                                   IsEditable="True"
                                                   Heading="Redemption Status"
                                                   MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}"
                                                   Style="{StaticResource MultiScreenComboBox}" />

                            <common:CustomTextBox x:Name="txtRemarks"
                                                  Heading="Remarks"
                                                  Text="{Binding RedemptionDTO.Remarks,Mode=TwoWay}"
                                                  DefaultValue=" "
                                                  Style="{StaticResource MultiScreenTextBox}"
                                                  IsEnabled="False"
                                                  MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}" />

                            <common:CustomTextBox x:Name="txtCardNumber"
                                                  Heading="Card Number"
                                                  Text="{Binding RedemptionDTO.PrimaryCardNumber,Mode=TwoWay}"
                                                  DefaultValue=" "
                                                  Style="{StaticResource MultiScreenTextBox}"
                                                  IsEnabled="False"
                                                  MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}" />

                            <common:CustomTextBox x:Name="txtRedeemDate"
                                                  Heading="Redeemed Date"
                                                  Text="{Binding RedeemedDate}"
                                                  DefaultValue=" "
                                                  Style="{StaticResource MultiScreenTextBox}"
                                                  IsEnabled="False"
                                                  MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}" />

                        </StackPanel>
                    </Grid>
                    <Grid x:Name="RightContainerGrid"
                          Grid.Column="1">
                        <Grid.Style>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Margin"
                                        Value="8,0" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                                 Value="True">
                                        <Setter Property="Margin"
                                                Value="4,0" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <StackPanel x:Name="RightContentStackPanel">
                            <StackPanel.Style>
                                <Style TargetType="{x:Type StackPanel}">
                                    <Setter Property="Margin"
                                            Value="8,0,16,0" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMultiScreenRowTwo}"
                                                     Value="True">
                                            <Setter Property="Margin"
                                                    Value="4,16,8,0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <common:CustomTextBox x:Name="txtAddRemarks"
                                                  Heading="Add Remarks"
                                                  Text="{Binding AddRemarks,Mode=TwoWay}"
                                                  DefaultValue="Enter"
                                                  Style="{StaticResource MultiScreenTextBox}"
                                                  MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}" />

                            <common:CustomTextBox x:Name="txtRedemptionId"
                                                  Heading="Redemption ID"
                                                  Text="{Binding RedemptionDTO.RedemptionId,Mode=OneWay}"
                                                  DefaultValue="Enter"
                                                  Style="{StaticResource MultiScreenTextBox}"
                                                  IsEnabled="False"
                                                  MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}" />

                            <common:CustomTextBox x:Name="txtCustomerName"
                                                  Heading="Customer Name"
                                                  Text="{Binding RedemptionDTO.CustomerName,Mode=OneWay}"
                                                  DefaultValue=" "
                                                  Style="{StaticResource MultiScreenTextBox}"
                                                  IsEnabled="False"
                                                  MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}" />

                            <common:CustomTextBox x:Name="txtPreparedDate"
                                                  Heading="Prepared Date"
                                                  Text="{Binding PreparedDate}"
                                                  DefaultValue=" "
                                                  Style="{StaticResource MultiScreenTextBox}"
                                                  IsEnabled="False"
                                                  MaxWidth="{Binding ActualWidth, ElementName=LeftContainerGrid}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </common:CustomScrollViewer>
        </Border>

        <Border x:Name="ButtonContainerBorder"
                Grid.Row="2"
                BorderBrush="{StaticResource Control.ComboBackground}"
                BorderThickness="0,1,0,0"
                VerticalAlignment="Top">
            <Grid Margin="0,8,16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom">
                    <common:CustomActionButton x:Name="btnCancel"
                                               Content="{Binding CancelButtonText}"
                                               CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                                               Command="{Binding CancelCommand}"
                                               Style="{StaticResource MultiScreenButtonStyle}"
                                               Margin="0,0,20,0"
                                               ActionStyle="Passive" />
                    <common:CustomActionButton x:Name="btnUpdate"
                                               Content="{Binding UpdateButtonText}"
                                               Style="{StaticResource MultiScreenButtonStyle}"
                                               CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                                               Command="{Binding UpdateCommand}"
                                               IsEnabled="{Binding IsUpdateButtonEnable}" />
                </StackPanel>
                <Button Grid.Column="1"
                        VerticalAlignment="Bottom"
                        x:Name="btnKeyBoard">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="border"
                                                BorderBrush="{StaticResource Control.BorderBrush}"
                                                BorderThickness="0,0,0,3"
                                                CornerRadius="{StaticResource CornerRadius}"
                                                Background="{TemplateBinding Background}">
                                            <Grid Margin="6"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center">
                                                <Path Data="M0 0H54V32H0z" />
                                                <Path Data="M50.4 32c1.997 0 3.6-1.583 3.6-3.556V3.556C54 1.583 52.397 0 50.4 0H3.6C1.603 0 0 1.583 0 3.556v24.888C0 30.417 1.603 32 3.6 32h46.8zm0-3.556H3.6V3.556h46.8v24.888zM10.35 10.667c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 7.11c.253 0 .45-.194.45-.444V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v6.666h-3.15c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h6.3zm-32.4 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-6.3c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h6.3zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm-25.2 7.112c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm28.8 0c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-24.3c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h24.3zm7.2 0c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7z"
                                                      Fill="{StaticResource Control.BorderBrush.Focused}"
                                                      Stretch="Uniform" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsKeyboardVisible}"
                                             Value="False">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>

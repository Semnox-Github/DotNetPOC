            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding EnterTicketButtonVisible}"
                             Value="False">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType = {x:Type local:RedemptionScanView}}}"
                                   Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border x:Name="ScanHeaderBorder"
                Grid.Row="0"
                Padding="0,12"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource Control.BorderBrush}">
            <common:CustomTextBlock x:Name="tbHeader"
                                    Text="{Binding Heading}"
                                    TextSize="Medium"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontWeight="{StaticResource FontWeight.Bold}" />
        </Border>

        <Button x:Name="btnClose"
                Grid.Row="0"
                Command="{Binding CloseCommand}"
                Style="{StaticResource CloseButtonStyle}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}" />

        <Grid x:Name="ContentAreaGrid"
              Grid.Row="1">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Margin"
                            Value="24" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding MultiScreenMode}"
                                     Value="True">
                            <Setter Property="Margin"
                                    Value="4,18" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <UniformGrid x:Name="ContentButtonUniformGrid"
                         Grid.Row="0"
                         Columns="{Binding ColumnCount}">
                <Button x:Name="btnGiftScan"
                        Style="{StaticResource ScanGiftButtonStyle}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                        Command="{Binding GiftCommand}" />
                <Button x:Name="btnTicketScan"
                        Style="{StaticResource ScanTicketButtonStyle}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                        Command="{Binding TicketCommand}" />
                <Button x:Name="btnEnterTicket"
                        Style="{StaticResource EnterTicketNoButtonStyle}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                        Command="{Binding EnterTicketCommand}" />
            </UniformGrid>
            <UniformGrid x:Name="ContentUniformGrid"
                         Grid.Row="1"
                         Columns="{Binding ColumnCount}">
                <common:CustomTextBlock x:Name="tbGiftScan"
                                        Text="{Binding GiftHeading}"
                                        Style="{StaticResource ScanGiftTextBlockStyle}" />
                <common:CustomTextBlock x:Name="tbTicketScan"
                                        Text="{Binding TicketHeading}"
                                        Style="{StaticResource ScanTicketTextBlockStyle}" />
                <common:CustomTextBlock x:Name="tbEnterTicket"
                                        Text="{Binding EnterTicketHeading}"
                                        Style="{StaticResource EnterTicketTextBlockStyle}" />
            </UniformGrid>
        </Grid>
    </Grid>
</Window>

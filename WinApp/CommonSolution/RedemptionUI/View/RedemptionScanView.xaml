<Window x:Class="Semnox.Parafait.RedemptionUI.RedemptionScanView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:common="clr-namespace:Semnox.Parafait.CommonUI;assembly=CommonUI"
        xmlns:local="clr-namespace:Semnox.Parafait.RedemptionUI"
        Style="{StaticResource PopupWindowStyle}"
        mc:Ignorable="d"
        Title="RedemptionScanView">
    <Window.Resources>

        <Style x:Key="CommonTextBlockStyle"
               TargetType="{x:Type common:CustomTextBlock}"
               BasedOn="{StaticResource {x:Type common:CustomTextBlock}}">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="TextWrapping"
                    Value="WrapWithOverflow" />
            <Setter Property="FontWeight"
                    Value="{StaticResource FontWeight.Bold}" />
            <Setter Property="Margin"
                    Value="0,8,16,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="True">
                    <Setter Property="Margin"
                            Value="0,8,4,0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ScanGiftTextBlockStyle"
               TargetType="{x:Type common:CustomTextBlock}"
               BasedOn="{StaticResource CommonTextBlockStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ScanGiftButtonVisible}"
                             Value="False">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ScanTicketTextBlockStyle"
               TargetType="{x:Type common:CustomTextBlock}"
               BasedOn="{StaticResource CommonTextBlockStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ScanTicketButtonVisible}"
                             Value="False">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EnterTicketTextBlockStyle"
               TargetType="{x:Type common:CustomTextBlock}"
               BasedOn="{StaticResource CommonTextBlockStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding EnterTicketButtonVisible}"
                             Value="False">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CommonPathStyle"
               TargetType="{x:Type Path}">
            <Setter Property="Stretch"
                    Value="Uniform" />
            <Setter Property="Fill"
                    Value="{StaticResource Action.Active.Background}" />
        </Style>

        <Style x:Key="CloseButtonStyle"
               TargetType="{x:Type Button}">
            <Setter Property="VerticalAlignment"
                    Value="Top" />
            <Setter Property="HorizontalAlignment"
                    Value="Right" />
            <Setter Property="Margin"
                    Value="0,-20,-20,0" />
            <Setter Property="Height"
                    Value="48" />
            <Setter Property="Width"
                    Value="{Binding ActualHeight,RelativeSource={RelativeSource Mode=Self}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="OutsideBorder"
                                Background="{StaticResource Action.Active.Background}"
                                CornerRadius="{Binding ActualWidth,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Button}}">
                            <Path x:Name="ClosePath"
                                  Stretch="Uniform"
                                  StrokeThickness="2"
                                  Data="M0,0 L1,1 M0,1 L1,0"
                                  Stroke="{StaticResource Action.Active.Foreground}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding MultiScreenMode}"
                                         Value="False">
                                <Setter Property="Padding"
                                        TargetName="OutsideBorder"
                                        Value="12" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding MultiScreenMode}"
                                         Value="True">
                                <Setter Property="Padding"
                                        TargetName="OutsideBorder"
                                        Value="8" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="True">
                    <Setter Property="Margin"
                            Value="0,-20,-10,0" />
                    <Setter Property="Height"
                            Value="36" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CommonOuterBorderStyle"
               TargetType="{x:Type Border}">
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="{StaticResource CornerRadius}" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource Control.BorderBrush}" />
            <Setter Property="Background"
                    Value="{StaticResource Action.Light.Background}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="True">
                    <Setter Property="Padding"
                            Value="8" />
                </DataTrigger>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="False">
                    <Setter Property="Padding"
                            Value="32" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CommonButtonMarginStyle"
               TargetType="{x:Type Button}">
            <Setter Property="Margin"
                    Value="0,8,16,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding MultiScreenMode}"
                             Value="True">
                    <Setter Property="Margin"
                            Value="0,8,4,0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>


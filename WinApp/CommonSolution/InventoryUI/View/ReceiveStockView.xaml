<Window x:Class="Semnox.Parafait.InventoryUI.ReceiveStockView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Semnox.Parafait.InventoryUI"
        xmlns:common="clr-namespace:Semnox.Parafait.CommonUI;assembly=CommonUI"
        Style="{StaticResource ChildWindowStyle}"
        mc:Ignorable="d"
        Title="Receive Stock" >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType = {x:Type local:ReceiveStockView}}}"
                                   Command="{Binding OnLoadCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type common:CustomScrollViewer}}" TargetType="{x:Type common:CustomScrollViewer}" x:Key="MultiScreenCustomScrollViewerStyle">
            <Setter Property="Padding" Value="0,0,8,0" />
            <Setter Property="Margin"  Value="20" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding MultiScreenMode}" Value="True">
                    <Setter Property="Margin" Value="0,16" />
                </DataTrigger>
                <DataTrigger Binding="{Binding MultiScreenMode}" Value="False">
                    <Setter Property="Margin" Value="0,16" />
                </DataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding MultiScreenMode}"  Value="True" />
                        <Condition Binding="{Binding IsMultiScreenRowTwo}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Size"  Value="XSmall" />
                    <Setter Property="Margin" Value="0" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Margin" Value="0,0,16,0" />
            <!--<Setter Property="FontStyle" Value="{StaticResource FontStyle.Normal}"/>-->
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontSize" Value="14 px"/>
            <Setter Property="FontStretch" Value="Condensed"/>
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Height" Value="Auto" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="FontWeight" Value="{StaticResource FontWeight.Bold}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridColumnHeader}">
                        <Grid>
                            <Border x:Name="columnHeaderBorder" BorderThickness="1" Padding="3,0,3,0">

                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid  RenderTransformOrigin="0.506,0.553">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" x:Name="ReceiveStockSearchRow" />
            <!--<RowDefinition Height="6*" x:Name="ReceiveStockGridRow" />-->
            <RowDefinition Height="*" x:Name="ReceiveStockGridRow" />
            <RowDefinition Height="Auto" x:Name="ReceiveStockButtonRow" />
        </Grid.RowDefinitions>
        <Grid  Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" /> 
            </Grid.ColumnDefinitions>
            <common:CustomTextBox x:Name="txtGNRNumber"
                                                  Heading="{Binding GRNNumberHeading}" 
                                                  FontWeight="{StaticResource FontWeight.Bold}"
                                                  DefaultValue="Invoice/Bill No" IsMandatory="True"
                                                  Margin="16" Text="{Binding SelectedGRNValue}"
                                                  FontSize="{StaticResource FontSize.Medium}"
                                                  Size="Small"    Foreground="#FF151111"
                                                  Grid.Column="0"/>
            <!--<common:CustomComboBox x:Name ="cbPOVendor"  Heading="{Binding VendorHeading}" 
                                                   Grid.Column="1" Margin="16"
                                                   Foreground="#FF151111"  
                                                   DisplayMemberPath="Name"
                                                   SelectedItem="{Binding SelectedVendor}" 
                                                   FontWeight="{StaticResource FontWeight.Bold}"
                                                   ItemsSource="{Binding VendorList}" 
                                                   FontSize="{StaticResource FontSize.Medium}"
                                                   IsEditable="True"   Size="Small" 
                                                   MaxWidth="{Binding ActualWidth, ElementName=LeftContentGridContainer}" />-->

            <common:CustomTextBox x:Name="txtPONumber"
                                                  Heading="{Binding POHeading}"  
                                                  FontWeight="{StaticResource FontWeight.Bold}"
                                                  DefaultValue="Enter PO Number"   
                                                  Margin="16" Text="{Binding SelectedPONumber}"
                                                  FontSize="{StaticResource FontSize.Medium}"
                                                  Size="Small"    Foreground="#FF151111"
                                                  Grid.Column="1"/>
            <common:CustomTextBox x:Name="txtProductSearch"
                                                  Heading="{Binding SearchHeading}" 
                                                  FontWeight="{StaticResource FontWeight.Bold}"
                                                  DefaultValue="Product Code/Description"   
                                                  Margin="16" Text="{Binding SelectedProductCode}"
                                                  FontSize="{StaticResource FontSize.Medium}"
                                                  Size="Small"    Foreground="#FF151111"
                                                  Grid.Column="2"/>

            <common:CustomActionButton x:Name="btnSearch"
                                                       Grid.Column="4"
                                                       ActionStyle="Active"
                                                       IsEnabled="True"
                                                       Width="{StaticResource ActionButton.Width}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}"
                                                       Command="{Binding SearchCommand}" Margin="5,16,5,16"
                                                       Content= "{Binding SearchButtonHeading}" />

            <common:CustomActionButton x:Name="btnClear"
                                                       Grid.Column="3"
                                                       ActionStyle="Passive"
                                                       IsEnabled="True"
                                                       Width="{StaticResource ActionButton.Width}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}"
                                                       Command="{Binding  ClearCommand}"  Margin="5,16,5,16"
                                                       Content= "{Binding ClearButtonHeading}" >
            </common:CustomActionButton>
        </Grid>
        <Border x:Name="GridTopBorder"
                Grid.Row="1"
                BorderBrush="{StaticResource Control.ComboBackground}"
                BorderThickness="0,1,0,0"
                VerticalAlignment="Top">
            <Grid   Grid.Row="1"  VerticalAlignment="Top" >
                <common:CustomDataGridUserControl x:Name="CustomDataGrid" DataContext="{Binding CustomDataGridVM}"  >
                    <i:Interaction.Triggers>
                        <!--<i:EventTrigger EventName="OnGridRowSelected">
                        <i:InvokeCommandAction CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                       Command="{Binding DataContext.RowSectionCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}" />
                    </i:EventTrigger>-->
                        <i:EventTrigger EventName="ButtonClicked" >
                            <i:InvokeCommandAction CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                       Command="{Binding DataContext.RemoveButtonClickCommand, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName= "SelectionChanged" >
                            <i:InvokeCommandAction CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}"
                                                       Command="{Binding DataContext.SelectionChangedCmd, RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </common:CustomDataGridUserControl>
            </Grid>
        </Border>
        <Border x:Name="FooterTopBorder"
                Grid.Row="2"
                BorderBrush="{StaticResource Control.ComboBackground}"
                BorderThickness="0,1,0,0"
                VerticalAlignment="Top">
            <Grid x:Name="FooterGrid"
                  Margin="30,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="FooterActionAreaColumn"
                                      Width="9*" />
                    <ColumnDefinition x:Name="FooterKeyBoardColumn"
                                      Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="FooterActionAreaStackPanel"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Center">
                              <!--<Grid Grid.Row="2"  VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width= "1.5*"/>
                                <ColumnDefinition Width= "1.5*"/>
                                <ColumnDefinition Width= "1.5*"/>
                            <ColumnDefinition Width= "5.5*" />  
                        </Grid.ColumnDefinitions>-->
                               <common:CustomActionButton x:Name="btnReceive"
                                                           Grid.Column="0"
                                                           ActionStyle="Active" HorizontalAlignment="Left"
                                                           IsEnabled="True"
                                                           Width="{StaticResource ActionButton.Width}"
                                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}"
                                                           Command="{Binding SaveCommand}" 
                                                           Content="{Binding ButtonReceive}" />
                               <common:CustomActionButton x:Name="btnRefresh"
                                                           Grid.Column="1"
                                                           ActionStyle="Active"
                                                           IsEnabled="True"
                                                           Margin="16,0,0,0"
                                                           HorizontalAlignment="Left"
                                                           Width="{StaticResource ActionButton.Width}"
                                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}"
                                                           Command="{Binding RefreshCommand}"
                                                           Content="{Binding ButtonRefresh}" />
                                <common:CustomActionButton x:Name="btnClose"
                                                           Grid.Column="2"
                                                           Margin="16,0,0,0"
                                                           ActionStyle="Active"
                                                           IsEnabled="True" 
                                                           HorizontalAlignment="Left"
                                                           Width="{StaticResource ActionButton.Width}"
                                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}"
                                                           Command="{Binding CloseCommand}"  
                                                           Content="{Binding ButtonClose}" />
                    <common:CustomActionButton x:Name="btnReceipt"
                                                           Grid.Column="3"
                                                           Margin="16,0,0,0"
                                                           ActionStyle="Active"
                                                           IsEnabled="True" 
                                                           HorizontalAlignment="Left"
                                                           Width="{StaticResource ActionButton.Width}"
                                                           CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:ReceiveStockView}}"
                                                           Command="{Binding ReceiptCommand}"  
                                                           Content="{Binding ButtonReceipt}" />
                </StackPanel>

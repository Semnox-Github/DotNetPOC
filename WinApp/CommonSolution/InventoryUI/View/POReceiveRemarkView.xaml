<Window x:Class="Semnox.Parafait.InventoryUI.POReceiveRemarkView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Semnox.Parafait.InventoryUI"
        xmlns:common="clr-namespace:Semnox.Parafait.CommonUI;assembly=CommonUI"
        Style="{StaticResource PopupWindowStyle}"
        mc:Ignorable="d"
        Title="Remarks" >
    <Window.Resources>
    </Window.Resources>
    <Grid x:Name="MainGrid" 
          Width="500" 
          Margin="32">

        <Grid.RowDefinitions>
            <RowDefinition x:Name="MainGridHeaderRow"
                           Height="*" />
            <RowDefinition x:Name="MainGridLabelRow"
                           Height="*" /> 
            <RowDefinition x:Name="MainGridContentRow"
                           Height="*" />
        </Grid.RowDefinitions>
        <common:CustomTextBlock x:Name="labelPORemarks"  
                                Text="{Binding LableRemarks}" 
                                TextSize="Medium"  
                                Grid.Row="0"
                                HorizontalAlignment="Left" 
                                TextAlignment="Left"
                                Width="{Binding ActualWidth, ElementName=MainGrid}" />
        <common:CustomTextBox x:Name="txtPORemarks"
                              Text="{Binding Remarks}"  
                              Size="Medium" 
                              Grid.Row="1"
                              DefaultValue="Enter Remarks Here"
                              MaxLength="500"
                              HorizontalAlignment="Left" 
                              Width="{Binding ActualWidth , ElementName=MainGrid}" />
        <!--<Grid Grid.Row="0"  
              x:Name="LeftContentGridContainer"
                          Margin="16" >
            --><!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width= "Auto"/>
            </Grid.ColumnDefinitions>-->
            <!--<StackPanel x:Name="lableAreaStackPanel"
                            Grid.Column="0"
                            Grid.ColumnSpan="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">--><!--
                <common:CustomTextBlock x:Name="labelPORemarks"  
                                                            Text="{Binding LableRemarks}" TextSize="Medium"  Margin="16"
                                                            HorizontalAlignment="Left" TextAlignment="Left"
                                                            MaxWidth="{Binding ActualWidth, 
                                                            ElementName=LeftContentGridContainer}" />
            --><!--</StackPanel>--><!--
        </Grid>-->
        <!--<Grid Grid.Row="1" 
              x:Name="LeftContentGridContainerText"
              Margin="16" >
            --><!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width= "Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="TextAreaStackPanel"
                            Grid.Column="0"
                            Grid.ColumnSpan="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">--><!--
                <common:CustomTextBox x:Name="txtPORemarks"  
                                      
                                      Text="{Binding Remarks}"  
                                      Size="Medium" 
                                      HorizontalAlignment="Left" 
                                      Margin="16"
                                      Width="{Binding ActualWidth , ElementName=LeftContentGridContainerText}" />
            --><!--</StackPanel>--><!--
        </Grid>-->
        <Border x:Name="FooterTopBorder"
                Grid.Row="2"
                BorderBrush="{StaticResource Control.ComboBackground}"
                BorderThickness="0,1,0,0"
                VerticalAlignment="Top">
            <Grid x:Name="FooterGrid"
                  Margin="30,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="FooterActionAreaColumn"
                                      Width="10*" />
                    <ColumnDefinition x:Name="FooterKeyBoardColumn"
                                      Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="FooterActionAreaStackPanel"
                            Grid.Column="0"
                            Grid.ColumnSpan="5"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom"  
                            HorizontalAlignment="Center">

                    <common:CustomActionButton x:Name="btnOK"
                                                       Grid.Column="1"
                                                       ActionStyle="Active" HorizontalAlignment="Left"
                                                       IsEnabled="True"
                                                       Width="{StaticResource ActionButton.Width}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:POReceiveRemarkView}}"
                                                       Command="{Binding AddCommand}" 
                                                       Margin="16"  
                                                       Content="{Binding ButtonOK}" />
                    <common:CustomActionButton x:Name="btnClear"
                                                       Grid.Row="2"
                                                       ActionStyle="Active"
                                                       IsEnabled="True" 
                                                       Margin="16"    HorizontalAlignment="Left"
                                                       Width="{StaticResource ActionButton.Width}"
                                                       CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:POReceiveRemarkView}}"
                                                       Command="{Binding CloseCommand}"  
                                                       Content="{Binding ButtonClose}" />
                </StackPanel>
                <Button x:Name="btnFooterKeyboard"
                        Grid.Column="1" 
                        VerticalAlignment="Bottom">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="BackgroundBorder"
                                                BorderBrush="{StaticResource Control.BorderBrush}"
                                                BorderThickness="0,0,0,3"
                                                CornerRadius="{StaticResource CornerRadius}"
                                                Background="{TemplateBinding Background}">
                                            <Grid x:Name="GridIconContainer"
                                                  Margin="8"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center">
                                                <Path x:Name="KeyBoardIconAlignmentPath"
                                                      Data="M0 0H54V32H0z" />
                                                <Path x:Name="KeyBoardIconPath"
                                                      Data="M50.4 32c1.997 0 3.6-1.583 3.6-3.556V3.556C54 1.583 52.397 0 50.4 0H3.6C1.603 0 0 1.583 0 3.556v24.888C0 30.417 1.603 32 3.6 32h46.8zm0-3.556H3.6V3.556h46.8v24.888zM10.35 10.667c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.195.45-.445V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 7.11c.253 0 .45-.194.45-.444V7.556c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v6.666h-3.15c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h6.3zm-32.4 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-6.3c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h6.3zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm7.2 0c.253 0 .45-.194.45-.444v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm-25.2 7.112c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7zm28.8 0c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-24.3c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h24.3zm7.2 0c.253 0 .45-.195.45-.445v-2.666c0-.25-.197-.445-.45-.445h-2.7c-.253 0-.45.195-.45.445v2.666c0 .25.197.445.45.445h2.7z"
                                                      Fill="{StaticResource Control.BorderBrush.Focused}" />
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
